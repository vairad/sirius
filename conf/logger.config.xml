        </layout>
        <param name="file" value="log/error.log" />
        <param name="append" value="true" />
    </appender>





    <logger name="error">
        <level value="ERROR" />
        <appender_ref ref="errorAppender" />
    </logger>
-->

    <root>
        <appender_ref ref="defaultAppender" />
    </root>

    <logger name="db">
        <appender_ref ref="databaseAppender" />
    </logger>

</configuration>